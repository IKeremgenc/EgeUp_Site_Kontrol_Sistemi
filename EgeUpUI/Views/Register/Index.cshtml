@model CreateNewUSerDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="~/corporate-ui-dashboard-main/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/corporate-ui-dashboard-main/assets/img/favicon.png">
    <title>
        EGEUP-KAYIT
    </title>
    <!-- Fonts and icons -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700|Noto+Sans:300,400,500,600,700,800|PT+Mono:300,400,500,600,700"
          rel="stylesheet" />
    <!-- Nucleo Icons -->
    <link href="~/corporate-ui-dashboard-main/assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="~/corporate-ui-dashboard-main/assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
   


    <script src="https://kit.fontawesome.com/349ee9c857.js" crossorigin="anonymous"></script>
    <link href="~/corporate-ui-dashboard-main/assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link id="pagestyle" href="~/corporate-ui-dashboard-main/assets/css/corporate-ui-dashboard.css?v=1.0.0" rel="stylesheet" />
  

</head>

<body class="">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <main class="main-content mt-0">

        <section>
           
            <div class="page-header min-vh-100">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="position-absolute w-40 top-0 start-0 h-100 d-md-block d-none">
                                <div class="oblique-image position-absolute d-flex fixed-top ms-auto h-100 z-index-0 bg-cover me-n8">
                                    <img src="~/corporate-ui-dashboard-main/assets/img/image-sign-up.jpg" alt="Background Image" class="w-100 h-100 object-fit-cover">
                                    <div class="my-auto text-start max-width-350 ms-7">
                                        <h1 class="mt-3 text-white font-weight-bolder">Start your <br> new journey.</h1>
                                        <p class="text-white text-lg mt-4 mb-4">Use these awesome forms to login or create new account in your project for free.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 d-flex flex-column mx-auto">
                            <div class="card card-plain mt-8">
                                <div class="card-header pb-0 text-left bg-transparent">
                                    <h3 class="font-weight-black text-dark display-6">Kayıt Ol</h3>

                                </div>
                                <div class="card-body">
                                    <form role="form" method="post" asp-controller="Register" asp-action="Index">
                                        <label>Kullanıcı Adı </label>
                                        <div class="mb-3">
                                            <input type="text" class="form-control" placeholder="Kullanıcı Adınızı giriniz" aria-label="Ad Soyad"
                                                   aria-describedby="name-addon" asp-for="Name">
                                            @if (ViewData.ModelState["Name"] != null && ViewData.ModelState["Name"].Errors.Any())
                                            {
                                                <p class="text-danger">@ViewData.ModelState["Name"].Errors[0].ErrorMessage</p>
                                            }
                                        </div>
                                   
                                  
                                        <label>E-posta Adresi</label>
                                        <div class="mb-3">
                                            <input type="email" class="form-control" placeholder="E-posta adresinizi giriniz" aria-label="E-posta"
                                                   aria-describedby="email-addon" asp-for="Mail">
                                            @if (ViewData.ModelState["Mail"] != null && ViewData.ModelState["Mail"].Errors.Any())
                                            {
                                                <p class="text-danger">@ViewData.ModelState["Mail"].Errors[0].ErrorMessage</p>
                                            }
                                        </div>
                                        <div class="mb-3">
                                            <label>Referans Kodu</label>
                                            <input type="text" class="form-control" placeholder="Referans kodunu giriniz" aria-label="Referans Kodu"
                                                   aria-describedby="referans-addon" asp-for="ReferanceCode">
                                            @if (ViewData.ModelState["ReferanceCode"] != null && ViewData.ModelState["ReferanceCode"].Errors.Any())
                                            {
                                                <p class="text-danger">@ViewData.ModelState["ReferanceCode"].Errors[0].ErrorMessage</p>
                                            }
                                        </div>

                                        <label>Şifre</label>
                                        <div class="mb-3">
                                            <input type="password" class="form-control" placeholder="Şifre oluşturunuz" aria-label="Şifre"
                                                   aria-describedby="password-addon" asp-for="Password">
                                            @if (ViewData.ModelState["Password"] != null && ViewData.ModelState["Password"].Errors.Any())
                                            {
                                                <p class="text-danger">@ViewData.ModelState["Password"].Errors[0].ErrorMessage</p>
                                            }
                                        </div>
                                 

                                        <div class="text-center">
                                            <button type="submit" class="btn btn-dark w-100 mt-4 mb-3">Üye Ol</button>
                                        </div>
                                    </form>


                                </div>
                                <div class="card-footer text-center pt-0 px-lg-2 px-1">
                                    <p class="mb-4 text-xs mx-auto">
                                        Zaten bir hesabın var mı?
                                        <a href="/Login/Index" class="text-dark font-weight-bold">Giriş yap</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <!-- Core JS Files -->
    <script src="~/corporate-ui-dashboard-main/assets/js/core/popper.min.js"></script>
    <script src="~/corporate-ui-dashboard-main/assets/js/core/bootstrap.min.js"></script>
    <script src="~/corporate-ui-dashboard-main/assets/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="~/corporate-ui-dashboard-main/assets/js/plugins/smooth-scrollbar.min.js"></script>
    <script>
        var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
            var options = {
                damping: '0.5'
            }
            Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }
    </script>
    <script>
        
        function showToastr() {
            toastr.info('Lütfen Türkçe Karakter Kullanmayın ', 'Hatırlatma');
        }

     
        window.onload = function () {
            showToastr();
        };
    </script>

    <!-- Github buttons -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <!-- Control Center for Corporate UI Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/corporate-ui-dashboard-main/assets/js/corporate-ui-dashboard.min.js?v=1.0.0"></script>
</body>

</html>